            android:name="com.phptravelsnative.Activities.Invoice"
            android:exported="false" />
        <activity
            android:name="com.phptravelsnative.Activities.Card"
            android:exported="false" />
        <activity
            android:name="com.phptravelsnative.Activities.CarDetail"
            android:exported="false" />
